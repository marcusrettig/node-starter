{
  "name": "node-starter",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "author": "marcusrettig",
  "license": "ISC",
  "scripts": {
    "start": "node src/app.js",
    "lint": "eslint src",
    "test": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-unicorn": "^6.0.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.16.3"
  }
}
